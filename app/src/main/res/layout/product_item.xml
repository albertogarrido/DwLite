<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:elevation="@dimen/material_elevation_radius"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/material_elevation_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/product_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/spacer_16dp"
            android:background="@color/colorPrimaryDark"
            android:drawablePadding="@dimen/spacer_4dp"
            android:paddingBottom="@dimen/spacer_4dp"
            android:paddingEnd="@dimen/spacer_8dp"
            android:paddingLeft="@dimen/spacer_8dp"
            android:paddingRight="@dimen/spacer_12dp"
            android:paddingStart="@dimen/spacer_12dp"
            android:paddingTop="@dimen/spacer_4dp"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"
            tools:text="Express" />

        <TextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/spacer_8dp"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/text_size_12"
            tools:text="Homemade chair" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_title"
            android:maxLines="3"
            android:padding="@dimen/spacer_8dp"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold"
            tools:text="28â‚¬" />

        <TextView
            android:id="@+id/product_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/product_title"
            android:layout_toEndOf="@+id/product_price"
            android:layout_toRightOf="@+id/product_price"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/spacer_8dp"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold"
            tools:text="by Alberto and Kim" />


    </RelativeLayout>
</android.support.v7.widget.CardView>