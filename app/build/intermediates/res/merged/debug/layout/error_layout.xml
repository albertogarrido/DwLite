<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/error_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacer_16dp"
        android:tint="@color/colorAccent"
        tools:src="@drawable/ic_search_black_48dp" />

    <TextView
        android:id="@+id/error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacer_32dp"
        android:layout_marginLeft="@dimen/spacer_32dp"
        android:layout_marginRight="@dimen/spacer_32dp"
        android:layout_marginStart="@dimen/spacer_32dp"
        android:layout_marginTop="@dimen/spacer_16dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_24"
        tools:text="@string/error_not_found" />

    <Button
        android:id="@+id/error_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacer_16dp"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimaryText"
        android:text="@string/error_retry" />
</LinearLayout>