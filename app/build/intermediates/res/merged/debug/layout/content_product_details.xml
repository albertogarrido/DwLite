<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/spacer_16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.albertogarrido.dawandalite.ui.products.detail.ProductDetailActivity"
    tools:showIn="@layout/activity_product_detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacer_8dp"
            android:textColor="@color/colorTextDark"
            android:textSize="18sp"
            tools:text="8999â‚¬" />

        <TextView
            android:id="@+id/product_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/product_title"
            android:drawablePadding="@dimen/spacer_8dp"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/spacer_8dp"
            android:paddingEnd="@dimen/spacer_12dp"
            android:paddingLeft="@dimen/spacer_12dp"
            android:paddingRight="@dimen/spacer_12dp"
            android:paddingStart="@dimen/spacer_12dp"
            android:paddingTop="@dimen/spacer_8dp"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            tools:text="New" />


        <TextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/product_price"
            android:layout_marginBottom="@dimen/spacer_8dp"
            android:layout_toLeftOf="@+id/product_badge"
            android:layout_toStartOf="@+id/product_badge"
            android:ellipsize="end"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/text_size_24"
            android:textStyle="bold"
            tools:text="iphone 7 plus" />

        <TextView
            android:id="@+id/product_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/product_title"
            android:layout_marginBottom="@dimen/spacer_16dp"
            android:layout_toLeftOf="@+id/product_badge"
            android:layout_toStartOf="@+id/product_badge"
            android:ellipsize="end"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/text_size_18"
            tools:text="by Alberto and Kim" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
